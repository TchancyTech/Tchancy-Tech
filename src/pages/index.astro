---
import Layout from "../layouts/Layout.astro";
---
<Layout>
  <section
    class="relative mt-24 min-h-[calc(100vh_-_6rem)] bg-cover bg-top flex items-center justify-start text-left px-4 sm:px-6 md:px-10 py-16 sm:py-20 md:py-24"
    style="background-image: url('/hero.jpg');"
  >
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-60 z-0"></div>

    <!-- Content -->
    <div
      class="relative z-10 max-w-3xl space-y-6 text-white bg-black bg-opacity-60 p-6 sm:p-8 md:p-10 rounded-xl shadow-2xl backdrop-blur-sm"
      id="presentation-container"
    >
      <h1
        class="text-3xl sm:text-4xl md:text-5xl font-bold drop-shadow-lg mb-4 leading-tight"
        id="typing-welcome"
      ></h1>

      <p
        class="text-base sm:text-lg md:text-xl leading-relaxed text-gray-300"
        id="typing-intro"
      ></p>

      <div class="flex space-x-4 pt-4">
        <a
          href="#projects"
          class="inline-block px-5 py-3 bg-tchancy-orange text-white font-semibold rounded-lg shadow-md hover:bg-tchancy-orange/90 transition-all duration-300"
        >
          View Projects
        </a>
        <a
          href="#contact"
          class="inline-block px-5 py-3 border-2 border-tchancy-orange text-tchancy-orange font-semibold rounded-lg hover:bg-tchancy-orange hover:text-white transition-all duration-300"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>

  <script>
    const welcomeText = "Welcome to Tchancy Tech";
    const introText =
      "At Tchancy Tech, we combine creativity, technology, and innovation to bring your digital vision to life. Whether you're looking for web development, system integration, or cybersecurity, our team is ready to deliver excellence. Explore our work and see what we can do together.";

    // Nou itilize klas Tailwind ki defini nan konfigirasyon an pou teksti Orange a:
    const orangeClass = "text-tchancy-orange font-bold";

    function highlightTchancyTech(text) {
      return text.replace(/Tchancy Tech/g, `<span class="${orangeClass}">Tchancy Tech</span>`);
    }

    function typeText(el, text, speed = 50, onComplete) {
      let i = 0;
      el.innerHTML = "";
      function type() {
        if (i < text.length) {
          el.innerHTML += text.charAt(i);
          i++;
          setTimeout(type, speed);
        } else {
          if (onComplete) onComplete();
        }
      }
      type();
    }

    document.addEventListener("DOMContentLoaded", () => {
      const welcomeEl = document.getElementById("typing-welcome");
      const introEl = document.getElementById("typing-intro");

      typeText(welcomeEl, welcomeText, 80, () => {
        welcomeEl.innerHTML = highlightTchancyTech(welcomeText);
        typeText(introEl, introText, 25, () => {
          introEl.innerHTML = highlightTchancyTech(introText);
        });
      });
    });
  </script>
</Layout>
