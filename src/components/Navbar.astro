---
import { useState } from 'preact/hooks';
---

<nav class="bg-[theme('colors.blackhorse.green')] px-10 py-8 shadow-md">


  <div class="flex justify-between items-center max-w-7xl mx-auto">
    
    <!-- Logo + Name -->
    <div class="flex items-center gap-3">
      <img src="/logo.png" alt="Black Horse System Logo" class="w-12 h-12 sm:w-16 sm:h-16" />
      <a href="/" class="text-lg sm:text-xl font-bold tracking-wide text-[theme('colors.blackhorse.orange')]">
        Black Horse System
      </a>
    </div>

    <!-- Hamburger Button -->
    <button
      class="md:hidden text-[theme('colors.blackhorse.silver')] focus:outline-none"
      aria-label="Toggle Menu"
      onClick={() => (document.getElementById('mobile-menu').classList.toggle('hidden'))}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

  <div class="hidden md:flex gap-6 text-sm font-semibold text-[theme('colors.blackhorse.silver')] items-center">
  <a href="/" class="hover:underline underline-offset-4 decoration-2 transition">Home</a>
  <a href="/services" class="hover:underline underline-offset-4 decoration-2 transition">Services</a>
  <a href="/about" class="hover:underline underline-offset-4 decoration-2 transition">About</a>
  <a href="/projects" class="hover:underline underline-offset-4 decoration-2 transition">Projects</a>
  <a href="/contact" class="hover:underline underline-offset-4 decoration-2 transition">Contact</a>
</div>


  <div id="mobile-menu" class="md:hidden hidden px-4 mt-4 text-[theme('colors.blackhorse.silver')] space-y-2">
  <a href="/" class="block hover:underline underline-offset-4 decoration-2 transition">Home</a>
  <a href="/services" class="block hover:underline underline-offset-4 decoration-2 transition">Services</a>
  <a href="/about" class="block hover:underline underline-offset-4 decoration-2 transition">About</a>
  <a href="/projects" class="block hover:underline underline-offset-4 decoration-2 transition">Projects</a>
  <a href="/contact" class="block hover:underline underline-offset-4 decoration-2 transition">Contact</a>
</div>

</nav>
